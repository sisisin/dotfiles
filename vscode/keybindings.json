// Place your key bindings in this file to overwrite the defaults
[
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus"
  },
  {
    "key": "cmd+l",
    "command": "expandLineSelection",
    "when": "textInputFocus"
  },
  {
    "key": "shift+alt+cmd+space",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm",
    "when": "gitlens:enabled && gitlens:keymap == 'chorded'"
  },
  {
    "key": "ctrl+shift+g g",
    "command": "-workbench.view.scm",
    "when": "gitlens:enabled && gitlens:keymap == 'chorded'"
  },
  {
    "key": "f2",
    "command": "editor.emmet.action.updateTag",
    "when": "editorTextFocus && !editorReadonly && editorLangId==html"
  },
  {
    "key": "ctrl+up",
    "command": "editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+down",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+left",
    "command": "-markdown-table-formatter.moveColumnLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+alt+right",
    "command": "-markdown-table-formatter.moveColumnRight",
    "when": "editorTextFocus"
  },
  {
    "key": "Escape",
    "command": "extension.jumpy-exit",
    "when": "editorTextFocus && jumpy.isJumpyMode"
  },
  {
    "key": "ctrl+w",
    "command": "extension.jumpy-word",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "extension.jumpy-line",
    "when": "editorTextFocus"
  }
]
